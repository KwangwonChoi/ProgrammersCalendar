<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_label_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/dialog_value_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_label_task_title"
        />

    <TextView
        android:id="@+id/dialog_label_task_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content"
        app:layout_constraintTop_toBottomOf="@id/dialog_value_task_title"
        />

    <TextView
        android:id="@+id/dialog_value_task_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_label_task_content"
        />

    <Button
        android:id="@+id/dialog_btn_task_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_value_task_content"
        app:layout_constraintRight_toLeftOf="@id/dialog_btn_cancel"
        android:text="delete" />

    <Button
        android:id="@+id/dialog_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintLeft_toRightOf ="@id/dialog_btn_task_delete"
        app:layout_constraintTop_toBottomOf="@id/dialog_value_task_content" />
</android.support.constraint.ConstraintLayout>